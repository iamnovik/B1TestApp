<Window x:Class="B1TestApp.infoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:B1TestApp"
        mc:Ignorable="d"
        Title="filesWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
        </ScrollViewer>
    </Grid>
</Window>
